# BrunoTrack Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=bruno_track
POSTGRES_USER=bruno_user
POSTGRES_PASSWORD=your_secure_password_here

# Application Configuration
NODE_ENV=production
PORT=3001

# Security
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Database URL (auto-generated from above variables)
DATABASE_URL=postgresql://bruno_user:your_secure_password_here@localhost:5432/bruno_track

# Optional: Custom domain for CORS (replace with your actual domain)
# CORS_ORIGIN=https://yourdomain.com 